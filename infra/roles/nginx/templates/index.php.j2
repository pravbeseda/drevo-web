<?php
// Test PHP page
$host = gethostname();
$php_version = phpversion();
$mysql_connection = false;

// Try MySQL connection if extension is loaded
if (extension_loaded('mysqli')) {
    // Check if MySQL credentials are defined
    $mysql_user = '{{ mysql_users[0].name | default("") }}';
    $mysql_password = '{{ mysql_users[0].pass | default("") }}';
    $mysql_database = '{{ mysql_databases[0].name | default("") }}';
    
    if (!empty($mysql_user) && !empty($mysql_database)) {
        $mysqli = @new mysqli(
            'localhost',
            $mysql_user,
            $mysql_password,
            $mysql_database
        );
        
        if (!$mysqli->connect_error) {
            $mysql_connection = true;
            $mysql_version = $mysqli->server_info;
            $mysqli->close();
        }
    }
}
