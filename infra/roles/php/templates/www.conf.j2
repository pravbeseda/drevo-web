[www]
user = www-data
group = www-data

listen = /run/php/php8.2-fpm.sock
listen.owner = www-data
listen.group = www-data
listen.mode = 0660

pm = dynamic
pm.max_children = {{ php_fpm_max_children | default('50') }}
pm.start_servers = {{ php_fpm_start_servers | default('5') }}
pm.min_spare_servers = {{ php_fpm_min_spare_servers | default('5') }}
pm.max_spare_servers = {{ php_fpm_max_spare_servers | default('35') }}
pm.max_requests = {{ php_fpm_max_requests | default('500') }}
pm.status_path = /status

request_terminate_timeout = {{ php_fpm_request_terminate_timeout | default('300') }}
request_slowlog_timeout = {{ php_fpm_request_slowlog_timeout | default('10s') }}
slowlog = /var/log/php8.2-fpm.slow.log

php_admin_value[error_log] = /var/log/php8.2-fpm.error.log
php_admin_flag[log_errors] = on

php_value[session.save_handler] = files
php_value[session.save_path] = /var/lib/php/sessions

; Security settings
php_admin_value[open_basedir] = /var/www:/tmp:/usr/share:/etc/phpmyadmin:/var/lib/phpmyadmin
php_admin_value[disable_functions] = exec,passthru,shell_exec,system,proc_open,popen,parse_ini_file,show_source

; Set environment variables for all PHP-FPM processes
env[PATH] = /usr/local/bin:/usr/bin:/bin
env[TMP] = /tmp
env[TMPDIR] = /tmp
env[TEMP] = /tmp

; Deny access to files beginning with a dot
security.limit_extensions = .php .php7 .php8 